                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/movie1"
                app:layout_constraintTop_toBottomOf="@+id/movie2detail" />

            <TextView
                android:id="@+id/movie3code"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:gravity="center_horizontal"
                android:text="123456"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/movie1"
                app:layout_constraintTop_toBottomOf="@+id/movie3detail" />

            <TextView
                android:id="@+id/movie4code"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:gravity="center_horizontal"
                android:text="123456"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/movie1"
                app:layout_constraintTop_toBottomOf="@+id/movie4detail" />

            <TextView
                android:id="@+id/movie5code"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/movie1"
                app:layout_constraintTop_toBottomOf="@+id/movie5detail" />

            <TextView
                android:id="@+id/movie2detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="GWS Sunway Pyramid\n14 SEP(MON) 2:30pm\nC1 C2 C3"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.545"
                app:layout_constraintStart_toEndOf="@+id/movie1"
                app:layout_constraintTop_toBottomOf="@+id/movie2name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>